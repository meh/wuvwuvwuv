{
	"manifest_version": 1,
	"type": "WebApp",

	"meta": {
		"name": "WUV WUV WUV",
		"description": "Guild Wars 2 World vs World (vs World) helper.",

		"version": "1.0.3",
		"author": "meh.",

		"icon": "img/icon.png",
		"gray_icon": "img/icon.gray.png",

		"minimum-overwolf-version": "0.77.10"
	},

	"data": {
		"start_window": "MainWindow",
		"windows": {
			"MainWindow": {
				"file": "index.html",
				"transparent": true,

				"size": {
					"width":  300,
					"height": 400
				}
			},

			"TrackerWindow": {
				"file": "index.html",
				"transparent": true,
				"clickthrough": true,
				"show_in_taskbar": false,

				"size": {
					"width": 1,
					"height": 1
				}
			},

			"TrackerClickableWindow": {
				"file": "index.html",
				"transparent": true,
				"show_in_taskbar": false,

				"size": {
					"width": 1,
					"height": 1
				}
			}

		},
		"hotkeys": {
			"toggle": {
				"title": "Toggle Tracker",
				"action-type": "custom",
				"default": "Apps"
			},
			"clickthrough": {
				"title": "Toggle Tracker Click-Through",
				"action-type": "custom",
				"default": "Ctrl+Apps"
			}
		},

		"externally_connectable": {
			"matches": [
				"http://*.guildwars2.com",
				"https://*.guildwars2.com"
			]
		}
	}
}
